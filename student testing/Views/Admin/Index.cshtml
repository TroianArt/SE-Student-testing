@{
}

@model student_testing.Models.Admin.AdminPageModel

<table class="table">
    <tr><th>Email</th><th>Role</th><th></th></tr>
    @foreach (var user in Model.Users)
    {
        <tr>
            <td>@user.Key</td>
            <td>@user.Value</td>
            <td>
                <form  asp-route-id="@user.Key" method="post">
                    
                    <button type="submit" class="btn btn-sm btn-danger">
                        Change role
                    </button>
                </form>
            </td>
        </tr>
    }
</table>